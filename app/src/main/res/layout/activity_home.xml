<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorPrimaryDark"
                tools:context=".Home">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="DATA MAHASISWA"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp"
            android:textStyle="bold" />

    <Button
            android:id="@+id/btn_activity_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="386dp"
            android:onClick="data"
            android:text="INPUT DATA" />

    <Button
            android:id="@+id/btn_activity_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_activity_data"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:onClick="gambar"
            android:text="MASUKKAN GAMBAR" />

    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="329dp"
            android:layout_height="299dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="66dp"
            android:layout_marginEnd="28dp"
            app:srcCompat="@drawable/user" />

</RelativeLayout>